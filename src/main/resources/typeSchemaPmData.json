{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "type": "object",
   "additionalProperties": false,
   "properties": {
      "filter": {
         "anyOf": [
            {
               "type": "string"
            },
            {
               "type": "object",
               "additionalProperties": false,
               "properties": {
                  "sourceNames": {
                     "type": "array",
                     "items": [
                        {
                           "type": "string"
                        }
                     ]
                  },
                  "measObjInstIds": {
                     "type": "array",
                     "items": [
                        {
                           "type": "string"
                        }
                     ]
                  },
                  "measObjClass": {
                     "type": "array",
                     "items": [
                        {
                           "type": "string"
                        }
                     ]
                  },
                  "measTypes": {
                     "type": "array",
                     "items": [
                        {
                           "type": "string"
                        }
                     ]
                  },
                  "measuredEntityDns": {
                     "type": "array",
                     "items": [
                        {
                           "type": "string"
                        }
                     ]
                  },
                  "pmRopStartTime": {
                     "type": "string"
                  },
                  "pmRopEndTime": {
                     "type": "string"
                  }
               }
            }
         ]
      },
      "filterType": {
         "type": "string",
         "enum": [
            "jslt",
            "regexp",
            "pmdata",
            "json-path"
         ]
      },
      "maxConcurrency": {
         "type": "integer",
         "minimum": 1
      },
      "kafkaOutputTopic": {
         "type": "string"
      },
      "gzip": {
         "type": "boolean"
      },
      "bufferTimeout": {
         "type": "object",
         "additionalProperties": false,
         "properties": {
            "maxSize": {
               "type": "integer",
               "minimum": 1
            },
            "maxTimeMiliseconds": {
               "type": "integer",
               "minimum": 0,
               "maximum": 160000
            }
         },
         "required": [
            "maxSize",
            "maxTimeMiliseconds"
         ]
      }
   }
}